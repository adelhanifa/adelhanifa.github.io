  {{!-- my JavaScript --}}
  <script>
    function editItem(itemID, editID) {
      console.log(itemID, editID)
      $.ajax({
        url: '/item/findToUpdate/'+itemID,
        type: 'POST',

        success: function (result) {
          console.log(result)
          document.getElementById(editID).innerHTML = `
          <form class="input-group" action="/item/update/${itemID}" method="POST">
            <input type="text" value="${result.name}" name="name" class="form-control" placeholder="Please Enter Item Name.... " minlength="3"
              required>
            <div class="input-group-append">
              <button class="btn btn-transition btn-outline-info" type="submit">Save</button>
              <a type="button" href="/" class="btn btn-transition btn-outline-danger">Cancel</a>
            </div>
          </form>`
        },

        error: function (error) {
          console.log(error)
        }
      });
    }
  </script>
